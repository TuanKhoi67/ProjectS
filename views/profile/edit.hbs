<form action="/profile/edit" method="POST">
  <label>Họ và tên:</label>
  <input type="text" name="fullname" value="{{user.user.fullname}}" required>

  <label>Email:</label>
  <input type="email" name="email" value="{{user.email}}" required>

  <label>Số điện thoại:</label>
  <input type="text" name="telephone" value="{{user.telephone}}" required>

  {{#if (eq role "tutor")}}
    <label>Khoa:</label>
    <input type="text" name="department" value="{{user.department}}">
  {{else}}
    <label>Môn học:</label>
    <input type="text" name="subject" value="{{user.subject}}">
  {{/if}}

  <button type="submit">Lưu thay đổi</button>
</form>
