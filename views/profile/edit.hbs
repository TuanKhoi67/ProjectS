<div class="edit-profile-container">
        <div class="edit-profile-header">
            <h1>Edit Profile</h1>
        </div>
        <div class="p-3">
            <form action="/profile/edit" method="POST">
                <div class="mb-3">
                    <label class="form-label">Full Name:</label>
                    <input type="text" name="fullname" class="form-control" value="{{user.fullname}}" required>
                </div>

                <div class="mb-3">
                    <label class="form-label">Email:</label>
                    <input type="email" name="email" class="form-control" value="{{user.email}}" required>
                </div>

                <div class="mb-3">
                    <label class="form-label">Password:</label>
                    <input type="password" name="password" class="form-control" placeholder="Enter new password">
                </div>

                <div class="mb-3">
                    <label class="form-label">Date of Birth:</label>
                    <input type="date" name="dob" class="form-control" value="{{#if profileData.dob}}{{profileData.dob}}{{/if}}">
                </div>

                <div class="mb-3">
                    <label class="form-label">Phone Number:</label>
                    <input type="text" name="phone" class="form-control" value="{{#if profileData.phone}}{{profileData.phone}}{{/if}}">
                </div>

                {{#if (eq user.role "student")}}
                    <div class="mb-3">
                        <label class="form-label">Student ID:</label>
                        <input type="text" name="enrollment" class="form-control" value="{{profileData.enrollment}}">
                    </div>
                {{/if}}

                {{#if (eq user.role "tutor")}}
                    <div class="mb-3">
                        <label class="form-label">Department:</label>
                        <input type="text" name="department" class="form-control" value="{{profileData.department}}">
                    </div>
                {{/if}}

                <button type="submit" class="btn btn-primary w-100 mt-3">Update Profile</button>
            </form>
        </div>
    </div>