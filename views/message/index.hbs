<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh sách người dùng</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .user-list {
            max-width: 500px;
            margin: auto;
        }
        .user-list a {
            text-decoration: none;
            color: black;
        }
        .user-list a:hover {
            color: #007bff;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h2 class="text-center">Chọn người để chat</h2>

        <!-- Thanh tìm kiếm -->
        <input type="text" id="search-box" class="form-control mb-3" placeholder="Tìm kiếm người dùng...">

        <ul class="list-group user-list">
            {{#each users}}
            <li class="list-group-item">
                <a href="/message/chat/{{this._id}}">{{this.fullname}}</a>
            </li>
            {{/each}}
        </ul>
    </div>

    <script>
        document.getElementById('search-box').addEventListener('input', function () {
            let searchText = this.value.toLowerCase();
            document.querySelectorAll('.user-list li').forEach(item => {
                let name = item.innerText.toLowerCase();
                item.style.display = name.includes(searchText) ? '' : 'none';
            });
        });
    </script>
</body>
</html>
