<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nh·∫Øn Tin</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }
        body {
            display: flex;
            flex-direction: column;
            height: 100vh;
        }

        /* Navbar */
        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: #007bff;
            color: white;
            padding: 10px 20px;
        }
        .navbar a {
            color: white;
            text-decoration: none;
            margin: 0 10px;
            font-weight: bold;
        }
        .navbar a:hover {
            text-decoration: underline;
        }

        /* Container */
        .container {
            display: flex;
            flex: 1;
        }

        /* Danh s√°ch ng∆∞·ªùi d√πng */
        .user-list {
            width: 30%;
            border-right: 1px solid #ccc;
            padding: 10px;
            overflow-y: auto;
            background: #f4f4f4;
        }

        .user-item {
            padding: 10px;
            border-bottom: 1px solid #ccc;
            cursor: pointer;
            background: white;
        }
        .user-item:hover {
            background: #ddd;
        }

        /* Khung chat */
        .chat-box {
            width: 70%;
            display: flex;
            flex-direction: column;
        }

        .chat-header {
            padding: 10px;
            background: #007bff;
            color: white;
            font-weight: bold;
        }

        .messages {
            flex: 1;
            padding: 10px;
            overflow-y: auto;
            border-bottom: 1px solid #ccc;
            background: #f9f9f9;
        }

        .message {
            margin: 5px 0;
            padding: 8px;
            border-radius: 5px;
            max-width: 70%;
        }

        .sent {
            background: #dcf8c6;
            align-self: flex-end;
            text-align: right;
        }

        .received {
            background: #f1f0f0;
            align-self: flex-start;
        }

        .input-box {
            display: flex;
            padding: 10px;
            background: #fff;
        }
        .input-box input {
            flex: 1;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
        .input-box button {
            padding: 10px;
            border: none;
            background: #007bff;
            color: white;
            cursor: pointer;
            margin-left: 10px;
            border-radius: 5px;
        }
    </style>
</head>
<body>

    <!-- Navbar -->
    <div class="navbar">
        <div>
            <a href="/">üè† Trang Ch·ªß</a>
            <a href="/profile">üë§ H·ªì S∆°</a>
            <a href="/message">üí¨ Nh·∫Øn Tin</a>
        </div>
        <div>
            <a href="/auth/logout">üö™ ƒêƒÉng Xu·∫•t</a>
        </div>
    </div>

    <div class="container">
        <!-- Danh s√°ch ng∆∞·ªùi d√πng -->
        <div class="user-list">
            <h2>Ng∆∞·ªùi D√πng</h2>
            {{#each users}}
                <div class="user-item" onclick="selectUser('{{this._id}}', '{{this.fullname}}')">
                    {{this.fullname}}
                </div>
            {{/each}}
        </div>

        <!-- Khung chat -->
        <div class="chat-box">
            <div class="chat-header" id="chat-header">Ch·ªçn m·ªôt ng∆∞·ªùi ƒë·ªÉ b·∫Øt ƒë·∫ßu nh·∫Øn tin</div>
            <div class="messages" id="messages"></div>
            <div class="input-box">
                <input type="text" id="message-input" placeholder="Nh·∫≠p tin nh·∫Øn...">
                <button onclick="sendMessage()">G·ª≠i</button>
            </div>
        </div>
    </div>

    <script>
    var socket = io();
    var currentUser = "{{user._id}}";
    var currentReceiver = null;

    function selectUser(userId, userName) {
        currentReceiver = userId;
        document.getElementById("chat-header").innerText = "ƒêang nh·∫Øn tin v·ªõi " + userName;
        document.getElementById("messages").innerHTML = "";

        // G·ª≠i y√™u c·∫ßu l·∫•y tin nh·∫Øn c≈©
        fetch(`/message/chat/${userId}`)
            .then(response => response.json())
            .then(messages => {
                messages.forEach(msg => {
                    let className = (msg.sender === "{{currentUser._id}}") ? "sent" : "received";
                    let msgElement = `<div class="message ${className}">${msg.content}</div>`;
                    document.getElementById("messages").innerHTML += msgElement;
                });
            })
            .catch(err => console.error("L·ªói khi t·∫£i tin nh·∫Øn:", err));
    }

    function sendMessage() {
    let message = document.getElementById("message-input").value;

        if (message.trim() && currentReceiver) {
            fetch('/message/chat', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ receiver: currentReceiver, content: message }) // ‚úÖ ƒê√∫ng t√™n `content`
            })
            .then(response => response.json())
            .then(data => {
                let msgElement = `<div class="message sent">${data.content}</div>`;
                document.getElementById("messages").innerHTML += msgElement;
                document.getElementById("message-input").value = ""; // X√≥a √¥ nh·∫≠p sau khi g·ª≠i
            })
            .catch(err => console.error("L·ªói g·ª≠i tin nh·∫Øn:", err));
        }
    }
</script>


</body>
</html>
