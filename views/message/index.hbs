<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh sách người dùng</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .user-list-container {
            max-width: 600px;
            margin: 20px auto;
            padding: 20px;
            background: #ffffff;
            border-radius: 8px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }
        .user-list a {
            text-decoration: none;
            color: black;
            font-weight: 500;
        }
        .user-list a:hover {
            color: #007bff;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">Trang chủ</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/login">Trang cá nhân</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-danger text-white px-3" href="/logout">Đăng xuất</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Danh sách người dùng -->
    <div class="container user-list-container">
        <h2 class="text-center mb-3">Chọn người để chat</h2>

        <!-- Thanh tìm kiếm -->
        <div class="input-group mb-3">
            <span class="input-group-text"><i class="bi bi-search"></i></span>
            <input type="text" id="search-box" class="form-control" placeholder="Tìm kiếm người dùng...">
        </div>

        <ul class="list-group user-list">
            {{#each users}}
            <li class="list-group-item d-flex align-items-center">
                
                <a href="/message/chat/{{this._id}}" class="flex-grow-1">{{this.fullname}}</a>
            </li>
            {{/each}}
        </ul>
    </div>
    <script>
        document.getElementById('search-box').addEventListener('input', function () {
            let searchText = this.value.toLowerCase();
            document.querySelectorAll('.user-list li').forEach(item => {
                let name = item.innerText.toLowerCase();
                item.style.display = name.includes(searchText) ? '' : 'none';
            });
        });
    </script>
</body>
</html>
