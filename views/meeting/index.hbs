<a href="/api/meeting/create" class="btn">Create A Meeting</a>
<table class="table table-bordered" border="1" cellspacing="0" cellpadding="10">
  <thead>
    <tr>
      <th>Title</th>
      <th>Form</th>
      <th>Location</th>
      <th>Status</th>
      <th>Begin Time</th>
      <th>End Time</th>
      <th>Tutor</th>
      <th>Student</th>
      <th>Note</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    {{#each meetings}}
      <tr>
        <td>{{title}}</td>
        <td>{{form}}</td>
        <td>{{location}}</td>
        <td>{{status}}</td>
        <td>{{formatDate startTime}}</td>
        <td>{{formatDate endTime}}</td>
        <td>
          {{#each tutor}}
            <div>{{this.name}}</div>
          {{/each}}
        </td>
        <td>
          {{#each student}}
            <div>{{this.name}}</div>
          {{/each}}
        </td>
        <td>{{note}}</td>
        <td>{{formatDate createDate}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>