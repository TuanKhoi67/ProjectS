<head>
    <title>Meeting List</title>
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">Meeting List</h2>
        {{#if meetings.length}}
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Form</th>
                        <th>Location</th>
                        <th>Status</th>
                        <th>Student</th>
                        <th>Tutor</th>
                        <th>Note</th>
                        <th>Begin Time</th>
                        <th>End Time</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each meetings}}
                        <tr>
                            <td>{{this.title}}</td>
                            <td>{{this.form}}</td>
                            <td>{{this.location}}</td>
                            <td>{{this.status}}</td>
                            <td>{{this.student.name}}</td>
                            <td>{{this.tutor.name}}</td>
                            <td>{{this.note}}</td>
                            <td>{{this.startTime}}</td>
                            <td>{{this.endTime}}</td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        {{else}}
            <div class="alert alert-warning">No meeting exist.</div>
        {{/if}}
    </div>
</body>

