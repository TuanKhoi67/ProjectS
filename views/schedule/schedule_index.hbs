<h1>Show All Classes</h1> 

<div class="table-container">
    <table>
        <thead>
            <tr>
                <th>Time</th>
                <th>Subject</th>
                <th>Student Name</th>
                <th>Teacher Name</th>
            </tr>
        </thead>
        <tbody>
            {{#each schedules}}
            <tr>
                <td><a>{{time}}</a></td>
                <td>{{subject}}</td>
                <td>
                    {{#each student}}
                        {{this.name}}<br>  <!-- Chỉ hiển thị tên sinh viên -->
                    {{/each}}
                </td>
                <td>{{tutor.name}}</td>
                <!--<td>
                    <a class="button-3" href="/brand/edit/{{ _id }}">Edit</a>
                    <a class="button-3" href="/brand/delete/{{ _id }}"
                        onclick="return confirm('Are you sure to delete this brand ?');">Delete</a>
                </td>-->
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

