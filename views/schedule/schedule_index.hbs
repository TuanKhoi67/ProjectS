{{!-- layout.hbs --}}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="style.css">
    <style>

        .btn-primary {
            background-color: #2a2a91;
            border-color: #2a2a91;
        }
        .btn-primary:hover {
            background-color: #1f1f6e;
            border-color: #1f1f6e;
        }

    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/">Schedule</a>
        </div>
    </nav>
    <div class="container mt-4">
        {{{body}}}
    </div>
</body>
</html>

{{!-- schedule_index.hbs --}}
{{!-- Kế thừa từ layout.hbs --}}
{{#> layout}}
<div class="card">
    <div class="card-header text-center">
        <h3>{{title}}</h3>
        <p>Week: {{weekRange}}</p>
    </div>
    <div class="card-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Slot</th>
                    <th>Class</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {{#each schedules}}
                <tr>
                    <td>{{this.day}}</td>
                    <td>{{this.time}}</td>
                    <td>{{this.class.classname}}</td>
                    <td>
                        <a href="/schedule/edit/{{this._id}}" class="btn btn-primary btn-sm">Edit</a>
                        <a href="/schedule/delete/{{this._id}}" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        <a href="/schedule/add" class="btn btn-primary">Add Schedule</a>
        <a href="/schedule/schedule-view/{{prevWeek}}" class="btn btn-light">Previous Week</a>
        <a href="/schedule/schedule-view/{{nextWeek}}" class="btn btn-light">Next Week</a>
    </div>
</div>
{{/layout}}