<div class="main-content">
<h1>Show All Classes</h1> 
<a href="/class/create" class="btn">Create to Class</a>
<div class="table-container">
    <table class="table table-bordered"> 
        <thead>
            <tr>
                <th>Class Name</th>
                <th>Student Name</th>
                <th>Teacher Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each classes}}
            <tr>
                <td><a>{{classname}}</a></td>
                <td>
                    {{#each student}}
                        {{this.name}}<br>  
                    {{/each}}
                </td>
                <td>
                    {{#each tutor}}
                        {{this.name}}<br>  
                    {{/each}}
                </td>
                <td>
                    <a class="btn btn-primary" href="/class/delete/{{ _id }}"
                        onclick="return confirm('Are you sure to delete this class ?');">Delete</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
