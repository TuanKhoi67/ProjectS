<style>
    .blog-card {
        border-radius: 15px;
        /* Rounded corners */
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
        /* Subtle shadow for depth */
        transition: transform 0.3s ease-in-out;
    }

    .blog-card:hover {
        transform: scale(1.05);
    }

    .card-text {
        height: 100px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
