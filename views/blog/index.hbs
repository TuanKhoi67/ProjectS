<head>
    <title>All Blogs</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>

<style>
    .search-container {
        max-width: 1300px;
        margin-bottom: 15px;
        display: flex;
        position: relative;
        align-items: center;
    }

    .search-container form {
        flex-grow: 1;
    }

    .search-bar {
        width: 100%;
        max-width: 985px;
        padding: 8px 16px;
        border: 1px solid #d1d5db;
        border-radius: 9999px;
        margin-bottom: 16px;
    }

    .search-btn {
        background-color: black;
        color: white;
        border: none;
        display: inline-block;
        margin-left: 10px;
        padding: 10px 10px;
        border-radius: 30px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .search-btn:hover {
        background-color: #0056b3;
    }


    .blog-card {
        border-radius: 15px;
        /* Rounded corners */
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
        /* Subtle shadow for depth */
        transition: transform 0.3s ease-in-out;
    }

    .blog-card:hover {
        transform: scale(1.05);
    }

    .card-text {
        height: 80px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .card-img-top {
        height: 200px;
        object-fit: cover;
        border-radius: 5px 5px 0 0;
    }
</style>

<body>
    <!-- Main Content -->
    <div class="container">
        <h2 class="text-center mb-4">üìñ All Blogs</h2>
        <div class="search-container text-center">
            <form action="/blog/search" method="get">
                <input type="text" class="search-bar" name="q" placeholder="Search for blog..." required>
                <button type="submit" class="search-btn"><i class="fa-solid fa-magnifying-glass fa-xl"></i></button>
            </form>
        </div>
        <div class="row">
            {{#each blogs}}
            <div class="col-4 mb-4">
                <div class="blog-card shadow-sm">
                    <div class="content">
                        <!-- ·∫¢nh b√†i vi·∫øt -->
                        {{#if this.image}}
                        <img src="{{{absolutePath this.image}}}" alt="{{this.title}}">
                        {{else}}
                        <div class="card-img-top bg-secondary">
                            <span class="text-white">No Image</span>
                        </div>
                        {{/if}}

                        <div class="icon">
                            <a href="#"><i class="fa-regular fa-user"></i> By {{this.author.fullname}}
                                ({{this.role}})</a>
                        </div>
                        <a href="#" class="title">{{this.title}}</a>
                        <p class="card-text">{{this.content}}</p>

                        <!-- Th√¥ng tin t∆∞∆°ng t√°c -->
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <i class="fa-solid fa-heart"> {{this.likes}}</i>
                            <i class="fa-solid fa-comment-dots"> {{this.comments.length}}</i>
                        </div>

                        <!-- N√∫t ch·ªânh s·ª≠a/x√≥a -->
                        <a href="/blog/edit/{{this._id}}" class="btn"><i class="fa-regular fa-pen-to-square"></i>
                            Edit</a>
                        <form action="/blog/delete/{{this._id}}" method="post"
                            onsubmit="return confirm('Are you sure you want to delete this blog?');" class="d-inline">
                            <button type="submit" class="btn"><i class="fa-regular fa-trash-can"></i>
                                Delete</button>
                        </form>
            <div class="col">
                <div class="card blog-card shadow-sm h-100">
                    <!-- ·∫¢nh b√†i vi·∫øt -->
                    {{#if this.image}}
                    <img src="{{this.image}}" class="card-img-top" alt="{{this.title}}">
                    {{else}}
                    <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center">
                        <span class="text-white">No Image</span>
                    </div>
                    {{/if}}
                    
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-primary">{{this.title}}</h5>
                        <div class="d-flex align-items-center mb-2">
                            <small class="text-muted">
                                <img src="{{#if this.author.profilePicture}}{{this.author.profilePicture}}{{else}}https://via.placeholder.com/30{{/if}}" 
                                     class="rounded-circle me-2" style="width: 30px; height: 30px; object-fit: cover;">
                                {{this.author.fullname}}
                            </small>
                        </div>
                        <p class="card-text flex-grow-1">{{this.content}}</p>
                        
                        <!-- Th√¥ng tin t∆∞∆°ng t√°c -->
                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <button class="btn btn-link like-btn text-danger p-0">
                                    <span>{{this.likes}}</span>
                                </button>
                                <small class="text-muted">{{this.comments.length}} üí¨</small>
                            </div>
                            
                            <!-- Comment section -->
                            <div class="comment-section border-top pt-2">
                                {{#each this.comments}}
                                <div class="d-flex align-items-start mb-2">
                                    <img src="{{#if this.user.profilePicture}}{{this.user.profilePicture}}{{else}}https://via.placeholder.com/25{{/if}}" 
                                         class="rounded-circle me-2" style="width: 25px; height: 25px; object-fit: cover;">
                                    <div>
                                        <strong>{{this.user.fullname}}</strong>
                                        <p class="mb-0">{{this.content}}</p>
                                    </div>
                                </div>
                                {{/each}}
                            </div>
                            
                            <!-- N√∫t ch·ªânh s·ª≠a/x√≥a -->
                            <div class="d-flex gap-2 mt-3">
                                <a href="/blog/edit/{{this._id}}" class="btn btn-warning btn-sm flex-grow-1">‚úè Edit</a>
                                <form action="/blog/delete/{{this._id}}" method="post" class="flex-grow-1">
                                    <button type="submit" class="btn btn-danger btn-sm w-100">üóë Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</body>