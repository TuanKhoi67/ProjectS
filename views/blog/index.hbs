<head>
    <title>All Blogs</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>

<style>
    .search-container {
        max-width: 1300px;
        margin-bottom: 15px;
        display: flex;
        position: relative;
        align-items: center;
    }

    .search-container form {
        flex-grow: 1;
    }

    .search-bar {
        width: 100%;
        max-width: 985px;
        padding: 8px 16px;
        border: 1px solid #d1d5db;
        border-radius: 9999px;
        margin-bottom: 16px;
    }

    .back-btn,
    .search-btn {
        background-color: black;
        color: white;
        border: none;
        display: inline-block;
        margin: 0 10px;
        padding: 10px 10px;
        border-radius: 30px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .back-btn:hover {
        background-color: #0056b3;
    }

    .search-btn:hover {
        background-color: #0056b3;
    }

    .blog-card {
        border-radius: 15px;
        /* Rounded corners */
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
        /* Subtle shadow for depth */
        transition: transform 0.3s ease-in-out;
    }

    .blog-card:hover {
        transform: scale(1.05);
    }

    .card-text {
        height: 80px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .card-img-top {
        height: 200px;
        object-fit: cover;
        border-radius: 5px 5px 0 0;
    }
</style>

<body>
    <!-- Main Content -->
    <div class="container">
        <h2 class="text-center mb-4">ðŸ“– All Blogs</h2>
        <div class="search-container text-center">
            <form action="/blog/search" method="get">
                <a href="/blog" class="back-btn"><i class="fa-solid fa-rotate-left"></i> Back</a>
                <input type="text" class="search-bar" name="q" placeholder="Search for blog..." required>
                <button type="submit" class="search-btn"><i class="fa-solid fa-magnifying-glass fa-xl"></i></button>
            </form>
        </div>
        <div class="row">
            {{#each blogs}}
            <div class="col-4 mb-4">
                <div class="blog-card shadow-sm">
                    <div class="content">
                        <!-- áº¢nh bÃ i viáº¿t -->
                        {{#if this.image}}
                        <img src="{{{absolutePath this.image}}}" alt="{{this.title}}">
                        {{else}}
                        <div class="card-img-top bg-secondary">
                            <span class="text-white">No Image</span>
                        </div>
                        {{/if}}

                        <div class="icon">
                            <a href="#"><i class="fa-regular fa-user"></i> By {{this.author.fullname}}
                                ({{this.role}})</a>
                        </div>
                        <a href="#" class="title">{{this.title}}</a>
                        <p class="card-text">{{this.content}}</p>

                        <!-- ThÃ´ng tin tÆ°Æ¡ng tÃ¡c -->
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <i class="fa-solid fa-heart"> {{this.likes}}</i>
                            <i class="fa-solid fa-comment-dots"> {{this.comments.length}}</i>
                        </div>

                        <!-- NÃºt chá»‰nh sá»­a/xÃ³a -->
                        <a href="/blog/edit/{{this._id}}" class="btn"><i class="fa-regular fa-pen-to-square"></i>
                            Edit</a>
                        <form action="/blog/delete/{{this._id}}" method="post"
                            onsubmit="return confirm('Are you sure you want to delete this blog?');" class="d-inline">
                            <button type="submit" class="btn"><i class="fa-regular fa-trash-can"></i>
                                Delete</button>
                        </form>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</body>