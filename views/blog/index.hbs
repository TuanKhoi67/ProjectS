<head>
    <title>All Blogs</title>
</head>

<style>
    .blog-card {
        border-radius: 15px;
        /* Rounded corners */
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
        /* Subtle shadow for depth */
        transition: transform 0.3s ease-in-out;
    }

    .blog-card:hover {
        transform: scale(1.05);
    }

    .card-text {
        height: 100px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
</style>

<body>
    <!-- Main Content -->
    <div class="container">
        <h2 class="text-center mb-4">ðŸ“– All Blogs</h2>
        <div class="row">
            {{#each blogs}}
            <div class="col-4 mb-4">
                <div class="blog-card shadow-sm">
                    <div class="content">
                        <div class="icon">
                            <a href="#"><i class="fa-regular fa-user"></i> By {{this.author.fullname}}
                                ({{this.role}})</a>
                        </div>
                        <a href="#" class="title">{{this.title}}</a>
                        <p class="card-text">{{this.content}}</p>
                        <a href="/blog/edit/{{this._id}}" class="btn"><i class="fa-regular fa-pen-to-square"></i>
                            Edit</a>
                        <form action="/blog/delete/{{this._id}}" method="post" class="d-inline">
                            <button type="submit" class="btn"><i class="fa-regular fa-trash-can"></i> Delete</button>
                        </form>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

