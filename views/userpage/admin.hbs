<head>
    <title>Admin Dashboard</title>
</head>
<style>
    .content {
        padding: 20px;
    }
</style>

<div class="sidebar" id="sidebar">
    <div class="sidebar-header">
        <button class="toggle-btn" onclick="toggleSidebar()">â˜°</button>
        <span class="sidebar-title">Dashboard</span>
    </div>
    <hr>
    <ul>
        <li><a href="/admin/dashboard">Admin Dashboard</a></li>
        <li><a href="/admin/dashboard/tutor">Tutor Dashboard</a></li>
        <li><a href="/admin/dashboard/student">Student Dashboard</a></li>
        <li><a href="/userpage/admin">User Management</a></li>
        <li><a href="/blog">Blog Management</a></li>
        <li><a href="/document">Document Management</a></li>
        <li><a href="/api/meeting">Meeting</a></li>
        <li><a href="/class">Class</a></li>
        <li><a href="/schedule/schedule-view">Schedule</a></li>
        <li><a href="/attendance/all">View Attendance</a></li>
    </ul>
</div>

<script>
    function toggleSidebar() {
        const sidebar = document.querySelector('.sidebar');
        sidebar.classList.toggle('hidden');
    }
</script>

<div class="d-flex">
    <div class="content w-100">
        <div class="container mt-4">
            <h1 class="text-center">Account Management</h1>
            <div class="row mt-4 align-items-start">
                <div class="col-md-6">
                    <h2 class="text-primary">Tutor List</h2>
                    <table class="table table-hover table-bordered mt-3">
                        <thead class="table-primary">
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each tutors}}
                            <tr>
                                <td>{{this.fullname}}</td>
                                <td>{{this.email}}</td>
                                <td>
                                    <a href="/userpage/edit/{{this._id}}" class="btn">Edit</a>
                                    <form action="/userpage/delete/{{this._id}}" method="POST" class="d-inline">
                                        <button type="submit" class="btn"
                                            onclick="return confirm('Are you sure to delete?');">Delete</button>
                                    </form>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                <!-- Admin List -->
                <div class="row mt-4 align-items-start">
                    <div class="col-md-12">
                        <h2 class="text-primary">Admin List</h2>
                        <table class="table table-hover table-bordered mt-3">
                            <thead class="table-primary">
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each admins}}
                                <tr>
                                    <td>{{this.fullname}}</td>
                                    <td>{{this.email}}</td>
                                    <td>
                                        <a href="/userpage/edit/{{this._id}}" class="btn btn-warning">Edit</a>
                                        <form action="/userpage/delete/{{this._id}}" method="POST" class="d-inline">
                                            <button type="submit" class="btn btn-danger"
                                                onclick="return confirm('Are you sure to delete?');">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="col-md-6">
                    <h2 class="text-primary">Student List</h2>
                    <table class="table table-hover table-bordered mt-3">
                        <thead class="table-primary">
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each students}}
                            <tr>
                                <td>{{this.fullname}}</td>
                                <td>{{this.email}}</td>
                                <td>
                                    <a href="/userpage/edit/{{this._id}}" class="btn">Edit</a>
                                    <form action="/userpage/delete/{{this._id}}" method="POST" class="d-inline">
                                        <button type="submit" class="btn"
                                            onclick="return confirm('Are you sure to delete?');">Delete</button>
                                    </form>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
</body>