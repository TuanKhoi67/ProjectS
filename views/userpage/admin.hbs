<head>
    <title>Admin Dashboard</title>
</head>
<style>
    .sidebar {
        min-height: 100vh;
        background-color: #343a40;
        color: white;
        padding: 20px;
    }

    .sidebar a {
        color: white;
        text-decoration: none;
        display: block;
        padding: 10px;
    }

    .sidebar a:hover {
        background-color: #495057;
    }

    .content {
        padding: 20px;
    }
</style>

<body>
    <div class="d-flex">
        <div class="content w-100">
            <div class="container mt-4">
                <h1 class="text-center">Account Management</h1>
                <p class="text-center">Welcome, {{user.fullname}}</p>
                <div class="row mt-4">
                    <div class="col-md-6">
                        <h2 class="text-primary">Danh sách Tutor</h2>
                        <table class="table table-hover table-bordered mt-3">
                            <thead class="table-primary">
                                <tr>
                                    <th>Tên</th>
                                    <th>Email</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each tutors}}
                                <tr>
                                    <td>{{this.fullname}}</td>
                                    <td>{{this.email}}</td>
                                    <td>
                                        <a href="/userpage/edit/{{this._id}}" class="btn">Edit</a>
                                        <form action="/userpage/delete/{{this._id}}" method="POST" class="d-inline">
                                            <button type="submit" class="btn"
                                                onclick="return confirm('Bạn có chắc muốn xóa?');">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <h2 class="text-primary">Danh sách Student</h2>
                        <table class="table table-hover table-bordered mt-3">
                            <thead class="table-primary">
                                <tr>
                                    <th>Tên</th>
                                    <th>Email</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each students}}
                                <tr>
                                    <td>{{this.fullname}}</td>
                                    <td>{{this.email}}</td>
                                    <td>
                                        <a href="/userpage/edit/{{this._id}}" class="btn">Edit</a>
                                        <form action="/userpage/delete/{{this._id}}" method="POST" class="d-inline">
                                            <button type="submit" class="btn"
                                                onclick="return confirm('Bạn có chắc muốn xóa?');">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>