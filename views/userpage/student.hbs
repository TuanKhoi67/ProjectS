<head>
    <title>Student User Page</title>
</head>

<style>
    .profile-img {
        border-radius: 50%;
        width: 50px;
        height: 50px;
        margin-right: 8px;
    }

    .blog-card {
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease-in-out;
        padding: 15px;
    }

    .blog-card:hover {
        transform: scale(1.05);
    }

    .card-text {
        height: 100px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .card-img-top {
        height: 200px;
        object-fit: cover;
        border-radius: 5px 5px 0 0;
        width: 100%;
    }

    .popup-btn {
        background-color: #f0f2f5;
        border: none;
        padding: 10px 20px;
        border-radius: 20px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .popup-btn:hover {
        background-color: #e0e4e8;
    }

    .modal {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1000;
    }

    .modal-content {
        background: white;
        padding: 20px;
        border-radius: 10px;
        width: 90%;
        max-width: 500px;
        position: relative;
    }

    .close {
        position: absolute;
        top: 10px;
        right: 15px;
        font-size: 20px;
        cursor: pointer;
    }

    .image-preview {
        max-height: 200px;
        object-fit: contain;
    }

    .icon {
        margin: 8px 0;
        color: #555;
    }

    .title {
        font-weight: bold;
        text-decoration: none;
        color: #333;
    }
</style>
</head>

<body>
    <div class="container mt-4">
        <h1 class="text-center">Student User Page</h1>
        <a href="/profile">Profile</a>


        <!-- Form đăng blog -->
        <h4 class="text-center mt-4">
            <img class="profile-img"
                src="{{#if user.profilePicture}}{{user.profilePicture}}{{else}}https://placehold.co/50x50{{/if}}"
                alt="User profile picture">
            <button id="openPopup" class="popup-btn">What’s Your Blog Inspiration Today, {{user.fullname}}?</button>
        </h4>

        <!-- Popup Modal -->
        <div id="blogModal" class="modal" style="display: none;">
            <div class="modal-content shadow p-4 bg-white rounded">
                <span id="closePopup" class="close">&times;</span>
                <h2 class="text-center">New Blog</h2>
                <form action="/blog" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title">Title</label>
                        <input type="text" class="form-control" id="title" name="title" required>
                    </div>
                    <div class="mb-3">
                        <label for="content">Content</label>
                        <textarea class="form-control" id="content" name="content" rows="5" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label>Ảnh bài viết</label>
                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="imageSource" id="uploadRadio"
                                    value="upload" checked>
                                <label class="form-check-label" for="uploadRadio">Tải ảnh lên</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="imageSource" id="urlRadio"
                                    value="url">
                                <label class="form-check-label" for="urlRadio">Dùng link ảnh</label>
                            </div>
                        </div>
                        <div id="uploadSection">
                            <input type="file" class="form-control" id="imageFile" name="imageFile" accept="image/*">
                            <small class="text-muted">Chấp nhận ảnh JPEG, PNG (tối đa 5MB)</small>
                        </div>
                        <div id="urlSection" style="display: none;">
                            <input type="url" class="form-control" id="imageUrl" name="imageUrl"
                                placeholder="https://example.com/image.jpg">
                        </div>
                        <img id="imagePreview" class="image-preview mt-2" style="display: none;">
                    </div>
                    <input type="hidden" name="role" value="student">
                    <button type="submit" class="btn btn-primary w-100">Đăng bài</button>
                </form>
            </div>
        </div>
        
        <div class="text-center">
            <a href="/dashboard/student_dashboard" class="btn">Your Dashboard</a>
        </div>

            <!-- Hiển thị danh sách blog -->
            <h2 class="text-center mt-5">Student Blogs</h2>
            <div class="row mt-4">
                {{#each blogs}}
                <div class="col-md-4 mb-4">
                    <div class="blog-card">
                        {{#if this.image}}
                        <img src="{{{absolutePath this.image}}}" class="card-img-top" alt="{{this.title}}">
                        {{else}}
                        <div class="card-img-top bg-secondary d-flex justify-content-center align-items-center text-white"
                            style="height: 200px;">
                            No Image
                        </div>
                        {{/if}}

                        <div class="icon">
                            <i class="fa-regular fa-user"></i> {{this.author.fullname}} ({{this.role}})
                        </div>
                        <a href="#" class="title">{{this.title}}</a>
                        <p class="card-text">{{this.content}}</p>
                        <div class="d-flex justify-content-between">
                            <span><i class="fa-solid fa-heart"></i> {{this.likes}}</span>
                            <span><i class="fa-solid fa-comment-dots"></i> {{this.comments.length}}</span>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
    </div>

    <!-- Script -->
    <script>
        const openPopupBtn = document.getElementById("openPopup");
        const closePopupBtn = document.getElementById("closePopup");
        const modal = document.getElementById("blogModal");

        openPopupBtn.addEventListener("click", () => {
            modal.style.display = "flex";
        });

        closePopupBtn.addEventListener("click", () => {
            modal.style.display = "none";
        });

        // Xử lý chuyển đổi giữa upload ảnh và URL
        const uploadRadio = document.getElementById("uploadRadio");
        const urlRadio = document.getElementById("urlRadio");
        const uploadSection = document.getElementById("uploadSection");
        const urlSection = document.getElementById("urlSection");
        const imagePreview = document.getElementById("imagePreview");

        uploadRadio.addEventListener("change", () => {
            uploadSection.style.display = "block";
            urlSection.style.display = "none";
            imagePreview.style.display = "none";
        });

        urlRadio.addEventListener("change", () => {
            uploadSection.style.display = "none";
            urlSection.style.display = "block";
            imagePreview.style.display = "none";
        });

        // Hiển thị ảnh preview khi nhập link
        document.getElementById("imageUrl").addEventListener("input", (e) => {
            const url = e.target.value;
            if (url) {
                imagePreview.src = url;
                imagePreview.style.display = "block";
            } else {
                imagePreview.style.display = "none";
            }
        });
    </script>
</body>
