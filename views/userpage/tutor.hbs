<head>
    <title>Tutor User Page</title>
</head>

<style>
    .blog-card {
        border-radius: 15px;
        /* Rounded corners */
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
        /* Subtle shadow for depth */
        transition: transform 0.3s ease-in-out;
    }

    .blog-card:hover {
        transform: scale(1.05);
    }

    .card-text {
        height: 100px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
</style>

<body>
    <div class="container">
        <h1 class="text-center">Tutor User Page</h1>
        <p class="text-center">Welcome, <strong>{{user.fullname}}</strong></p>

        <!-- Form đăng bài -->
        <h2 class="text-center mt-4">Write a New Blog</h2>
        <form action="/blog" method="post" class="shadow p-4 bg-white rounded">
            <div class="mb-3">
                <label for="title">Title</label>
                <input type="text" class="form-control" id="title" name="title" required>
            </div>
            <div class="mb-3">
                <label for="content">Content</label>
                <textarea class="form-control" id="content" name="content" rows="5" required></textarea>
            </div>
            <input type="hidden" name="role" value="tutor">
            <button type="submit" class="btn w-100">Submit</button>
        </form>

        <!-- Hiển thị danh sách blog -->
        <h2 class="text-center mt-4">Tutor Blogs</h2>
        <div class="row">
            {{#each blogs}}
            <div class="col-4 mb-4">
                <div class="blog-card shadow-sm">
                    <div class="content">
                        <div class="icon">
                            <a href="#"><i class="fa-regular fa-user"></i> By {{this.author.fullname}}
                                ({{this.role}})</a>
                        </div>
                        <a href="#" class="title">{{this.title}}</a>
                        <p class="card-text">{{this.content}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</body>