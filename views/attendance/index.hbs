<h1 class="title">Attendance</h1>
<hr>
<br>
<div class="container">
  <table class="table table-bordered table-primary" border="1" cellpadding="8" cellspacing="0">
    <thead>
      <tr>
        <th>Student Name</th>
        <th>Email</th>
        <th>Status</th>
        <th>Date</th>
        <th>Class</th>
      </tr>
    </thead>
    <tbody>
      {{#each attendances}}
        <tr>
          <td>{{this.student_id.name}}</td>
          <td>{{this.student_id.email}}</td>
          <td>
            {{#if (eq this.status "present")}}
              <span style="color: green; font-weight: bold;">{{this.status}}</span>
            {{else if (eq this.status "absent")}}
              <span style="color: red; font-weight: bold;">{{this.status}}</span>
            {{else}}
              {{this.status}}
            {{/if}}
          </td>
          <td>{{formatDate this.date}}</td>
          <td>{{this.className}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>


