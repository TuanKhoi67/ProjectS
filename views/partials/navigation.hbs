<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Purple Dashboard</title>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
  <style>
    body {
      margin: 0;
      font-family: 'Roboto', sans-serif;
      background-color: #f6f4fa;
    }
    .sidebar {
      width: 220px;
      background-color: white;
      height: 100vh;
      position: fixed;
      padding: 20px;
      box-shadow: 2px 0 10px rgba(0, 0, 0, 0.05);
      width: 240px;
        transition: all 0.3s ease;
    }
    .sidebar.hidden {
        margin-left: -240px;
    }
    .sidebar h2 {
      color: #a259ff;
      margin-bottom: 30px;
    }
    .sidebar ul {
      list-style: none;
      padding: 0;
    }
    .sidebar ul li {
      margin: 15px 0;
      color: #555;
      cursor: pointer;
    }
    .main {
      margin-left: 240px;
      padding: 20px;
      transition: all 0.3s ease;
    }
    .main.full {
        margin-left: 0;
    }
    .toggle-btn {
        position: fixed;
        top: 10px;
        left: 10px;
        z-index: 1000;
        background-color: #6a5acd;
        color: white;
        border: none;
        padding: 8px 12px;
        font-size: 20px;
        border-radius: 4px;
        cursor: pointer;
    }
    .top-bar {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .cards {
      display: flex;
      gap: 20px;
      margin-top: 20px;
    }
    .card {
      flex: 1;
      padding: 20px;
      border-radius: 10px;
      color: white;
      position: relative;
    }
    .card.sales {
      background: linear-gradient(135deg, #f76a8c, #f88ca1);
    }
    .card.orders {
      background: linear-gradient(135deg, #50a7f7, #5ecdfd);
    }
    .card.visitors {
      background: linear-gradient(135deg, #2bd9c5, #5ff0d0);
    }
    .stats {
      display: flex;
      gap: 20px;
      margin-top: 30px;
    }
    .stat-box {
      flex: 1;
      background: white;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0,0,0,0.05);
    }
    .chart-placeholder, .pie-placeholder {
      height: 200px;
      background: #eee;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #aaa;
      font-size: 14px;
    }
  </style>
</head>
<body>
  <button id="toggleSidebar" class="toggle-btn"><<</button>
  <div class="sidebar">
    <ul>
      <li><strong>Dashboard</strong></li>
      <li>UI Elements</li>
      <li>Icons</li>
      <li>Forms</li>
      <li>Charts</li>
      <li>Tables</li>
    </ul>
  </div>
  <div class="main">
    <div class="top-bar">
      <h1>Dashboard</h1>

    </div>

  </div>
</body>
</html>

<script>
  const toggleBtn = document.getElementById('toggleSidebar');
  const sidebar = document.querySelector('.sidebar');
  const main = document.querySelector('.main');

  toggleBtn.addEventListener('click', () => {
    sidebar.classList.toggle('hidden');
    main.classList.toggle('full');
  });
</script>