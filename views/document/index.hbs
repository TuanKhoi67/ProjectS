<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý tài liệu</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .container {
            max-width: 3200px;
            margin: auto;
        }
        .search-container {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }
        .search-container form {
            flex-grow: 1;
            margin-right: 10px;
        }
        .document-table img {
            max-width: 70px;
            border-radius: 5px;
        }
        .table th, .table td {
            text-align: center;
            vertical-align: middle;
        }
    </style>
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">📚 eTutoring</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/blog">🏠 Blog</a></li>
                    <li class="nav-item"><a class="nav-link" href="/document">📝Edit Documents</a></li>
                    <li class="nav-item"><a class="nav-link" href="/document/mainDocument">📝 Documents</a></li>
                    <li class="nav-item"><a class="nav-link" href="/auth/login">🔑 Login</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <h2 class="text-center mb-4">📚 Quản lý tài liệu</h2>

        <!-- Thanh tìm kiếm -->
        <div class="search-container">
            <form action="/document/search" method="get" class="d-flex">
                <input type="text" name="query" class="form-control" placeholder="🔍 Tìm kiếm tài liệu" required>
                <button type="submit" class="btn btn-primary ms-2">Tìm kiếm</button>
            </form>
            <a href="/document/add" class="btn btn-success">+ Thêm tài liệu</a>
        </div>

        <!-- Bảng danh sách tài liệu -->
        <div class="table-responsive">
            <table class="table table-bordered table-hover document-table">
                <thead class="table-dark">
                    <tr>
                        <th>Tên tài liệu</th>
                        <th>Người đăng</th>
                        <th>Nội dung</th>
                        <th>Hình ảnh</th>
                        <th>File</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each documents}}
                    <tr>
                        <td>{{this.title}}</td>
                        <td>{{this.author}}</td>
                        <td>{{this.content}}</td>
                        <td>
                            <img src="{{this.imageUrl}}" alt="{{this.title}}" style="max-width: 70px; border-radius: 5px;">
                        </td>
                        <td>
                            {{#if this.documentFile}}
                                <a href="{{this.documentFile}}" class="btn btn-info btn-sm" download>📥 Tải tài liệu</a>
                            {{/if}}
                        </td>
                        <td>
                            <a href="/document/edit/{{this._id}}" class="btn btn-warning btn-sm">✏ Sửa</a>
                            <form action="/document/delete/{{this._id}}?_method=DELETE" method="POST" onsubmit="return confirm('Bạn có chắc chắn muốn xóa?');">
                                <button type="submit" class="btn btn-danger btn-sm">🗑 Xóa</button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>