<head>
    <title>Document Management</title>
</head>

<style>
    .search-container {
        max-width: 1300px;
        margin: auto;
        display: flex;
        position: relative;
        align-items: center;
    }

    .search-container form {
        flex-grow: 1;
    }

    .search-bar {
        width: 100%;
        max-width: 985px;
        padding: 8px 16px;
        border: 1px solid #d1d5db;
        border-radius: 9999px;
        margin-bottom: 16px;
    }

    .search-btn,
    .add-btn {
        background-color: black;
        color: white;
        border: none;
        display: inline-block;
        margin-left: 10px;
        padding: 10px 10px;
        border-radius: 30px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .delete-btn {
        background-color: transparent;
        border: none;
        padding: 10px;
        border-radius: 30px;
    }

    .search-btn:hover {
        background-color: #0056b3;
    }

    .add-btn:hover {
        background-color: #0056b3;
    }

    .document-table img {
        max-width: 280px;
        border-radius: 5px;
    }

    .table th,
    .table td {
        text-align: center;
        vertical-align: middle;
    }
</style>

<body>
    <div class="container">
        <h2 class="text-center mb-4">üìö Document Management</h2>

        <!-- Thanh t√¨m ki·∫øm -->
        <div class="search-container">
            <form action="/document/search" method="get">
                <input type="text" name="query" class="search-bar" placeholder="Search document by title..." required>
                <button type="submit" class="search-btn"><i class="fa-solid fa-magnifying-glass fa-xl"></i></button>
                <a href="/document/add" class="add-btn"><i class="fa-solid fa-plus"></i> Add new document</a>
            </form>
        </div>

        <!-- B·∫£ng danh s√°ch t√†i li·ªáu -->
        <div class="table-responsive">
            <table class="table table-bordered table-hover document-table">
                <thead class="table-dark">
                    <tr>
                        <th>T√™n t√†i li·ªáu</th>
                        <th>Ng∆∞·ªùi ƒëƒÉng</th>
                        <th>N·ªôi dung</th>
                        <th>H√¨nh ·∫£nh</th>
                        <th>File</th>
                        <th>Thao t√°c</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each documents}}
                    <tr>
                        <td>{{this.title}}</td>
                        <td>{{this.author}}</td>
                        <td>{{this.content}}</td>
                        <td>
                            <img src="{{this.imageUrl}}" alt="{{this.title}}" style="max-width: 70px; border-radius: 5px;">
                        </td>
                        <td>
                            {{#if this.documentFile}}
                                <a href="{{this.documentFile}}" class="btn btn-info btn-sm" download>üì• T·∫£i t√†i li·ªáu</a>
                            {{/if}}
                        </td>
                        <td>
                            <a href="/document/edit/{{this._id}}"><i class="fa-solid fa-pen-to-square"></i></a>
                            <form action="/document/delete/{{this._id}}?_method=DELETE" method="POST"
                                onsubmit="return confirm('Are you sure you want to delete this document?');">
                                <button type="submit" class="delete-btn"><i class="fa-solid fa-trash-can"></i></button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</body>