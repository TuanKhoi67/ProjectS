{{#> layouts/main }}

<h2>Thêm tài liệu mới</h2>

<form action="/document/add" method="post" class="form-inline">
    <input type="text" name="title" class="form-control" placeholder="Tên tài liệu" required>
    <input type="text" name="author" class="form-control" placeholder="Người đăng" required>
    <textarea name="content" class="form-control" placeholder="Nội dung" required></textarea>
    <input type="text" name="imageUrl" class="form-control" placeholder="URL của ảnh" required>
    <button type="submit" class="btn btn-success">Thêm tài liệu</button>
</form>

{{/layouts/main}}