<div class="main-content">
    <h1>Students Information Management</h1>
<h2>Add New Student</h2>
<form action="/admin/dashboard/add-student" method="POST">
    <label for="">Student Name</label>
    <input class="form-control w-25" type="text" id="" name="name" required>

    <label for="">Telephone</label>
    <input class="form-control w-25" type="text" id="" name="telephone" required>

    <label for="">Email</label>
    <input class="form-control w-25" type="tel" id="" name="email" required>

    <select id="subject" name="subject" required>
    <option value="">-- Select Subject --</option>
    <option value="mathematics">Mathematics</option>
    <option value="physics">Physics</option>
    </select>
    <button class="btn btn-primary" type="submit">Add</button>
</form>


<h2>Student List</h2>
<h3>Student Total: <span id="total">{{totalStudents}}</span></h3>

<div class="table-wrapper">
    <table class="table table-striped-columns table-primary w-30 ">
        <thead>
            <tr>
                <th>Student name</th>
                <th>Telephone</th>
                <th>Email</th>
                <th>Subject</th>
                <th>Enrollment Date</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each students }}
            <tr>
                <td>{{ name }}</td>
                <td>{{ telephone }}</td>
                <td>{{ email }}</td>
                <td>{{ subject }}</td>
                <td>{{ formatDate enrollmentDate }}</td>
                <td>
                    <a class="btn button-3" href="/admin/dashboard/student-edit/{{ _id }}">Edit</a>
                    <a class="btn button-3" href="/admin/dashboard/student-delete/{{ _id }}"
                        onclick="return confirm('Are you sure to delete this user ?');">Delete</a>
                </td>
            </tr>
            {{/each}}
        <tbody>
    </table>
</div>
